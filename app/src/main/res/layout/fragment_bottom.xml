<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_llyt_bottom"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    app:elevation="30dp">

    <TextView
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/silver" />

    <ImageView
        android:id="@+id/bottom_iv_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/search_album_default"
        tools:ignore="ContentDescription,RtlSymmetry" />

    <LinearLayout
        android:id="@+id/bottom_llyt_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/bottom_ib_play"
        android:layout_toEndOf="@id/bottom_iv_pic"
        android:orientation="vertical"
        android:padding="8dp"
        tools:ignore="RelativeOverlap">

        <TextView
            android:id="@+id/bottom_tv_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/bottom_default_name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bottom_tv_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="@string/bottom_default_singer"
            android:textColor="@color/deep_grey"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/bottom_ib_song_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:paddingEnd="15dp"
        android:src="@drawable/bottom_list"
        tools:ignore="ContentDescription,RtlSymmetry" />

    <ImageButton
        android:id="@+id/bottom_ib_play"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingTop="5dp"
        android:layout_toStartOf="@id/bottom_ib_song_list"
        android:background="@null"
        android:paddingEnd="25dp"
        android:src="@drawable/bottom_play"
        tools:ignore="ContentDescription,RtlSymmetry" />
</RelativeLayout>